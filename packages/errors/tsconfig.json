{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "declaration": true,
    "module": "Node16",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
