{
  "extends": ["@wolfcola/typescript-config/tsconfig"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
